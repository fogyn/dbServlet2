SELECT name FROM sqlite_master WHERE type='table' AND name='city3';

select nameCountry from country2;
select namecity from city2 WHERE idcountry = 1;
select capital from country2;


select count(), idcountry from  city2 GROUP by idcountry;
select namecountry, namecity from country2, city2 where city2.idcountry = country2.idcountry;

select namecountry, people, num, (people/num) as averege from country2, (select count() as num, idcountry from  city2 GROUP by idcountry) as dop where dop.idcountry = country2.idcountry;


select namecountry, num from country2, (select count() as num, idcountry from  city2 GROUP by idcountry) as dop where dop.idcountry = country2.idcountry
ORDER by num DESC LIMIT 2;

select namecountry, people from country2 ORDER by people DESC LIMIT 5;

select namecountry, people from country2 ORDER by people ASC LIMIT 2;

select namecountry from country2, (select count() as num, idcountry from  city2 GROUP by idcountry) as dop where dop.idcountry = country2.idcountry and num BETWEEN 4 and 6;


select namecity from (select namecity, count() as num from city2 GROUP by namecity) where num = 1;
select namecity from (select namecity, count() as num from city2 GROUP by namecity) where num > 1;
